{
  "name": "vre-shared-ui",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/vre/shared/ui/src",
  "prefix": "dsp",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/vre/shared/ui/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/vre/shared/ui/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/vre/shared/ui/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/vre/shared/ui/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/vre/shared/ui/**/*.ts",
          "libs/vre/shared/ui/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
