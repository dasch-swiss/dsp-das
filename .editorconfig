# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off

[*.json, *.scss, *.yml]
indent_size = 2

[*.ts]
spaces_around_brackets = inside
singleQuote = true
indent_size = 4
